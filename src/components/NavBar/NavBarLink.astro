---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {}

const { ...attributes } = Astro.props;
---

<a
  {...attributes}
  data-astro-prefetch
>
  <slot />
</a>

<style>
  @reference '@styles/main.css';
  a {
    all: unset;
    @apply m-1 rounded-(--default-radius) p-1 text-inherit hover:cursor-pointer hover:bg-(--background-hover-color) hover:text-inherit hover:no-underline md:m-2 md:p-2 dark:text-inherit dark:hover:bg-(--dark-background-hover-color) dark:hover:text-inherit;
  }
</style>
